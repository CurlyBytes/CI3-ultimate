{
	"name": "cocoytech/ci3-ultimate",
	"description" : "The CodeIgniter Application with Composer",
	"scripts": {

		"check-xdebug": [
			"phpunit --dump-xdebug-filter ../../bin/build/xdebug-filter.php",
			"phpunit --prepend bin/build/xdebug-filter.php -vvv --testdox --colors=always"
		],
		"check-phpdbg": [
			"phpdbg -q vendor/bin/phpunit --coverage-html bin/build/coverage-reports"
		],
		"check-pcov": [
			"pecl install pcov",
			"php -d pcov.enabled=1 vendor/bin/phpunit â€” coverage-html=var/coverage-report"
		],
		"check-watch": [
			"phpunit-watcher watch"
		]
	  },
	  "scripts-descriptions": {
		"install-production": "Install the standard setup with code efficiently."
	  },
	"require": {
		"php": ">=5.3.2",
		"codeigniter/framework": "3.1.11",
		"hirak/prestissimo": "0.3.10",
		"nltbinh/codeigniter-service-layer": "^1.0",
		"monolog/monolog": "^1.0",
		"app-insights-php/monolog-handler": "^0.2.1",
		"jkachel/codeigniter-monolog-plus": "^2.0"
	},
	"require-dev": {
		"compwright/codeigniter-installers": "*",
		"filp/whoops": "2.7.1",
		"ise/php-codingstandards-codeigniter": "^1.0.0",
		"mikey179/vfsstream": "1.1.*",
		"kenjis/ci-phpunit-test": "^0.17.3",
		"roave/security-advisories": "dev-master",
		"phpunit/phpunit": "7.5.20",
		"spatie/phpunit-watcher": "^1.22",
		"seunmatt/codeigniter-log-viewer": "^1.1",
		"vlucas/phpdotenv": "^4.1"
	},
	"extra": {
		"codeigniter-application-dir": "app/",
		"codeigniter-web-root": "public/",
		"installer-paths": {
			"app/third_party": ["type:codeigniter-third-party"],
			"app/library": ["type:codeigniter-library"]
        }
	}
}
